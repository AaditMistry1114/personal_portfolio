{
  "design_meta": {
    "category": "High-Converting SaaS / Personal Portfolio Landing Page",
    "theme": "Dark",
    "tone": "Minimal, Professional, Conversion-Focused",
    "visual_density": "Low",
    "primary_goal": "Guide user linearly from awareness to action"
  },

  "color_system": {
    "background": {
      "primary": "#0B0B0C",
      "secondary": "#121214",
      "elevated": "#18181B"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#A1A1AA",
      "muted": "#71717A"
    },
    "accent": {
      "primary": "#FFFFFF",
      "secondary": "#3F3F46",
      "cta": "#FFFFFF"
    },
    "border": {
      "default": "rgba(255,255,255,0.08)",
      "hover": "rgba(255,255,255,0.18)"
    }
  },

  "typography": {
    "font_family": {
      "primary": "Inter / System Sans",
      "fallback": "sans-serif"
    },
    "scale": {
      "hero_heading": "text-4xl to text-6xl",
      "section_heading": "text-2xl to text-3xl",
      "card_title": "text-lg",
      "body": "text-sm to text-base",
      "caption": "text-xs"
    },
    "weight": {
      "headings": "600-700",
      "body": "400-500"
    },
    "line_height": {
      "headings": "tight",
      "body": "relaxed"
    }
  },

  "layout_system": {
    "container_width": "max-w-6xl to max-w-7xl",
    "horizontal_padding": "px-6 md:px-8",
    "section_spacing": "py-24",
    "grid": {
      "default": "12-column",
      "cards": "3-column desktop, 1-column mobile",
      "features": "3x2 grid"
    },
    "alignment": "centered sections with left-aligned text blocks"
  },

  "navigation": {
    "type": "Sticky Top Navigation",
    "behavior": "Scroll-based section navigation",
    "visibility": "Always visible",
    "cta_position": "Right aligned",
    "interaction": {
      "active_state": "Underline or opacity change",
      "scroll_spy": true
    }
  },

  "section_structure": [
    {
      "name": "Hero",
      "purpose": "Immediate value proposition",
      "elements": [
        "Headline",
        "Supporting description",
        "Primary CTA",
        "Secondary CTA",
        "Visual placeholder"
      ],
      "layout": "Two-column (text + visual)",
      "focus": "Clarity over creativity"
    },
    {
      "name": "Social Proof / Partners",
      "purpose": "Trust reinforcement",
      "layout": "Horizontal logo row or indicators",
      "visual_weight": "Low"
    },
    {
      "name": "Benefits",
      "purpose": "Explain outcomes, not features",
      "layout": "Card grid",
      "card_style": "Soft border, minimal contrast"
    },
    {
      "name": "How It Works",
      "purpose": "Reduce cognitive friction",
      "layout": "Step-based cards",
      "steps": 3
    },
    {
      "name": "Pricing / Value",
      "purpose": "Anchor perceived value",
      "layout": "3-card pricing grid",
      "highlight": "Middle or recommended option"
    },
    {
      "name": "Testimonials",
      "purpose": "Emotional validation",
      "layout": "Card carousel or grid"
    },
    {
      "name": "FAQ",
      "purpose": "Handle objections",
      "interaction": "Accordion"
    },
    {
      "name": "Final CTA",
      "purpose": "Conversion",
      "layout": "Isolated section with strong contrast"
    }
  ],

  "components": {
    "cards": {
      "radius": "rounded-xl",
      "border": "1px subtle",
      "hover": "Slight lift + border highlight",
      "background": "elevated"
    },
    "buttons": {
      "primary": {
        "style": "Solid",
        "radius": "rounded-md",
        "padding": "px-6 py-3"
      },
      "secondary": {
        "style": "Outline",
        "border": "subtle"
      }
    }
  },

  "motion": {
    "library": "Framer Motion (optional)",
    "entry_animations": "Fade + slight upward motion",
    "hover_effects": "Scale 1.02",
    "scroll_behavior": "Smooth scrolling",
    "timing": "Fast, subtle, non-distracting"
  },

  "interaction_principles": {
    "focus": "One primary action per section",
    "visual_noise": "Minimal",
    "contrast_usage": "Only for CTAs",
    "cognitive_load": "Low"
  },

  "ai_replication_guidelines": {
    "do": [
      "Maintain vertical rhythm",
      "Use consistent card patterns",
      "Keep text concise",
      "Emphasize outcomes over features"
    ],
    "avoid": [
      "Bright colors",
      "Over-animation",
      "Dense text blocks",
      "Unstructured sections"
    ]
  }
}
